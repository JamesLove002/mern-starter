  },
  "homepage": "https://github.com/JamesLove002/mern-starter#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
